{
  "name": "my-api",
  "version": "1.0.0",
  "private": true,
  "main": "src/index.ts",
  "scripts": {
    "dev": "bun --watch .",
    "build": "bun type-check && bun build --compile --target bun --outfile server .",
    "build:docker": "docker build -t my-api .",
    "type-check": "tsgo --incremental false",
    "format": "prettier --write \"./src/**/*.{js,cjs,mjs,jsx,ts,tsx}\"",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "bun ./src/scripts/seed.ts"
  },
  "dependencies": {
    "@elysiajs/openapi": "1.4.14",
    "@t3-oss/env-core": "0.13.10",
    "drizzle-orm": "0.45.1",
    "elysia": "1.4.25",
    "zod": "4.3.6"
  },
  "devDependencies": {
    "@types/bun": "1.3.9",
    "@typescript/native-preview": "7.0.0-dev.20260217.1",
    "drizzle-kit": "0.31.9",
    "postgres": "3.4.8",
    "prettier": "3.8.1",
    "prettier-plugin-organize-imports": "4.3.0"
  }
}
